executable: nemo
cpp-options: -DNEMO_VERSION="@PACKAGE_VERSION@"
@CUDA_ENABLED_HS@other-modules: Simulation.CUDA, Simulation.CUDA.Address, Simulation.CUDA.DeviceProperties, Simulation.CUDA.KernelFFI, Simulation.CUDA.Memory, Simulation.CUDA.Mapping, Simulation.CUDA.Options, Simulation.CUDA.State
@CUDA_ENABLED_HS@cpp-options: -DCUDA_ENABLED
@CUDA_ENABLED_HS@extra-libraries: cuIzhikevich cudart
@CUDA_ENABLED_HS@extra-lib-dirs: @CUDA_PATH@/lib dist/build/cuda/lib
@CUDA_ENABLED_HS@include-dirs: src/Simulation/CUDA/kernel @CUDA_PATH@/include

@PTHREADS_ENABLED_HS@cc-options: -DPTHREADS_ENABLED @PTHREAD_CFLAGS@
-- TODO: deal with multiple options here!
@PTHREADS_ENABLED_HS@ghc-options: -optl=@PTHREAD_CFLAGS@ @PTHREAD_LIBS@
